<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.game.dao.HeroDao">	
	
	<insert id="add" parameterType="com.game.entity.Hero" useGeneratedKeys="true" keyProperty="id">
		insert into hero ( id
			<if test="null != accountId">
				, accountId
			</if>
			<if test="null != templateId">
				, templateId
			</if>
		) values ( #{id}
			<if test="null != accountId">
				, #{accountId}
			</if>
			<if test="null != templateId">
				, #{templateId}
			</if>
		)
	</insert>
	
	<select id="getById" parameterType="Long" resultType="com.game.entity.Hero">
		select * from hero where id = #{id}
	</select>
	
	<select id="getByList" parameterType="Long" resultType="com.game.entity.Hero">
		select * from hero where accountId = #{accountId}
	</select>
	
	<select id="isExistHero" resultType="Boolean">
		select if(count(1) &gt; 1, 'true', 'false') from hero where accountId = #{accountId} and templateId = #{heroTemplateId}
	</select>
	
	<select id="getByTemplateId" resultType="com.game.entity.Hero">
		select * from hero where accountId = #{accountId} and templateId = #{heroTemplateId}
	</select>
	
</mapper>  
