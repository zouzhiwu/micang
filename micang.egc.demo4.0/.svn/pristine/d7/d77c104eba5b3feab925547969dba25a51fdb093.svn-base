		}
	}
	
	public void startDestroy(long delayTime) {
		RoomJobManager.createDestroyRoomJob(this, delayTime);
	}
	
	public void stopDestroy() {
		if (JobScheduler.isHasJob(destroyJobKey)) {
			JobScheduler.stopJob(destroyJobKey);
		}
	}
	
	public void gameOver() {
		logger.info(String.format("游戏结束，回收房间%d", id));
		// 关闭选择队员Job
		stopChooseMember();
		// 关闭选择英雄Job
		stopAutoOperation();
		// 关闭显示阵容Job
		stopShowLayout();
		// 关闭显示战斗力Job
		stopShowFightPower();
		// 关闭开始游戏Job
		stopBeginGame();
		// 关闭移动到初始位置Job
		stopMoveInitplace();
		// 关闭出兵控制Job
		stopArsenalContraller();
		// 关闭出兵Job
		stopArsenal();
		// 关闭英雄上线Job
		stopHeroOnline();
		// 关闭该房间相关Job
		stopJobGroup();
	}
	
	public void destroy() {
		Model.getInstance().roomMap.remove(this.id);
		gameOver();
	}
}
