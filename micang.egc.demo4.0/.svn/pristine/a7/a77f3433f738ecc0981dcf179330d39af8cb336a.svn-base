	}
	
	public void startMove() {
		FightJobManager.createMoveJob(this);
	}
	
	public boolean addUpdateVisionNode(AbsUpdateVisionNode node) {
		if (!updateVisionNodeList.contains(node)) {
			return updateVisionNodeList.add(node);
